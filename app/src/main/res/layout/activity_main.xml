<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/half_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="414dp"
        android:layout_height="212dp"
        android:background="@android:color/holo_blue_dark"
        android:listSelector="@android:color/system_neutral2_600"
        android:scrollbarThumbHorizontal="@color/material_dynamic_primary70"
        android:scrollbarThumbVertical="@color/material_dynamic_tertiary95"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-3dp"
        tools:visibility="visible">

    </ListView>



</androidx.constraintlayout.widget.ConstraintLayout>